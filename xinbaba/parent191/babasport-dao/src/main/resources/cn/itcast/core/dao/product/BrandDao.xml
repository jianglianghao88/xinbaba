<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.core.dao.product.BrandDao">

	<select id="selectCount" resultType="Integer" parameterType="BrandQuery">
		select count(1)
		from bbs_brand
		<where>
			<if test="name != null">
				name like concat('%', #{name}, '%')
			</if>
			<if test="isDisplay != null">
				and is_display = #{isDisplay}
			</if>
		</where>
	</select>	
	<resultMap type="Brand" id="brand">
		<result column="img_url" property="imgUrl" />
		<result column="is_display" property="isDisplay" />
	</resultMap>
	<!--查询  -->
	<select id="selectBrandListByQuery" resultMap="brand" parameterType="BrandQuery">
		select id , name , description , img_url , sort , is_display
		from bbs_brand
		<where>
			<if test="name != null">
				name like concat('%', #{name}, '%')
			</if>
			<if test="isDisplay != null">
				and is_display = #{isDisplay}
			</if>
		</where>
		<if test="startRow != null">
			limit #{startRow} , #{pageSize}
		</if>
	</select>	
	
	<select id="selectBrandById" resultMap="brand" parameterType="Long">
		select id , name , description , img_url , sort , is_display
		from bbs_brand
		<where>
			id = #{id}
		</where>
	</select>	
	
	<update id="updateBrandById" parameterType="Brand">
		update bbs_brand
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="description != null">
				description = #{description},
			</if>
			<if test="imgUrl != null">
				img_url = #{imgUrl},
			</if>
			<if test="sort != null">
				sort = #{sort},
			</if>
			<if test="isDisplay != null">
				is_display = #{isDisplay}
			</if>
		</set>
		<where>
		 	id = #{id}
		</where>
		
	</update>
	
	<delete id="deletesByIds" parameterType="Long">
		delete from bbs_brand
		<where>
			id in
			<foreach collection="array" item="id" separator="," open="(" close=")">
				#{id}
			</foreach>
		</where>
	</delete>
</mapper>